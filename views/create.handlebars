<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:ital@1&display=swap');


  .login-page {
    width: 100%;

    margin: auto;
  }

  .form {

    position: relative;
    z-index: 1;

    max-width: 960px;
    color: white;
    margin: 0 auto 100px;

    text-align: center;

  }

  .form .text_input {
    font-family: "Roboto", sans-serif;
    outline: 0;
    background: #3d464d;
    width: 50%;
    border-radius: 5px;
    border: 0;
    color: white;

    padding: 15px;
    box-sizing: border-box;
    font-size: 14px;
  }

  .form textarea {
    border: 0;
    padding: 25px;
    color: white;
    background: #3d464d;
  }

  .form button {
    font-family: "Roboto", sans-serif;
    text-transform: uppercase;
    outline: 0;
    background: #ea4c88;
    width: 40%;
    border: 0;
    padding: 15px;
    color: #FFFFFF;
    border-radius: 5px;
    font-size: 14px;
    -webkit-transition: all 0.3 ease;
    transition: all 0.3 ease;
    cursor: pointer;
  }

  .form .checkbox {
    font-family: "Roboto", sans-serif;
    text-transform: uppercase;
    outline: 0;
    background: #ea4c88;

    border: 0;
    padding: 15px;
    color: #FFFFFF;
    border-radius: 5px;
    font-size: 14px;
    -webkit-transition: all 0.3 ease;
    transition: all 0.3 ease;
    cursor: pointer;
  }

  .form button:hover,
  .form button:active,
  .form button:focus {
    background: #b93467;
  }



  body {
    background: #2c3338;
    background-color: #2c3338;
    font-family: "Roboto", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  label {
    color: white;
  }


  .logo {
    margin: 2px;
    margin-bottom: -40px;
  }

  textarea {
    width: 50%;

  }

  @media only screen and (orientation: portrait) {
    textarea {
      width: 80%;
    }

    .form .text_input {
      width: 90%;
    }
        .form button {
      width: 90%;
          padding: 25px;
    }
  }
</style>

